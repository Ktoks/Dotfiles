#!/usr/bin/env bash

precmd_hook() {
    [ $? = 0 ] && prompt_indicator="\n\[\e[38;2;121;161;14m\]->" || prompt_indicator="\n\[\e[38;2;219;41;20m\]xx"
    # [ $? = 0 ] && prompt_indicator="\n\[\e[38;2;202;141;15m\]->" || prompt_indicator="\n\[\e[38;2;219;41;20m\]xx"
    history -a; history -r

    PS1="\[\e[38;2;120;149;136m\]\u\[\e[38;2;121;116;14m\]@\[\e[38;2;202;141;15m\]\H \[\e[38;2;219;41;20m\]\w${prompt_indicator} \[\e[\033[00m\]"
 }

PROMPT_COMMAND="precmd_hook"
