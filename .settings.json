{
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false,
    "editor.hover.delay": 600,
    "editor.largeFileOptimizations": false,
    "editor.quickSuggestionsDelay": 10,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "on",
    "editor.wordBasedSuggestions": "off",
    // explorer settings/
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    // enable helix keymaps
    "extensions.experimental.affinity": {
        "jasew.vscode-helix-emulation": 1
    },
    // "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    // file settings
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 200,
    "files.maxMemoryForLargeFilesMB": 17280,
    "helixKeymap.toggleRelativeLineNumbers": true,
    // language specific settings
    "html.format.enable": false,
    "security.workspace.trust.untrustedFiles": "open",
    // terminal settings
    "terminal.integrated.inheritEnv": false,
    "window.customTitleBarVisibility": "windowed",
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#000000",
        "activityBar.background": "#000000",
        "activityBarTop.background": "#000000",
        "badge.background": "#000000",
        "banner.background": "#000000",
        "breadcrumb.background": "#000000",
        "dropdown.background": "#000000",
        "dropdown.listBackground": "#000000",
        "editor.background": "#000000",
        "editorGroup.dropBackground": "#000000",
        "editorGroup.dropIntoPromptBackground": "#000000",
        "editorGroupHeader.border": "#000000",
        "editorGroupHeader.noTabsBackground": "#000000",
        "editorGroupHeader.tabsBackground": "#000000",
        "list.inactiveSelectionBackground": "#C5DEF0",
        "menu.background": "#000000",
        "scrollbarSlider.activeBackground": "#111111",
        "scrollbarSlider.hoverBackground": "#111111",
        "sideBar.background": "#000000",
        "sideBar.dropBackground": "#000000",
        "sideBarSectionHeader.background": "#000000",
        "statusBar.background": "#000000",
        "tab.activeBackground": "#222222",
        "tab.inactiveBackground": "#000000",
        "terminal.background": "#000000",
        "titleBar.activeBackground": "#000000",
        "titleBar.inactiveBackground": "#000000"
    },
    "workbench.colorTheme": "Gruvbox Dark Hard",
    // workbench settings
    // "workbench.activityBar.visible": true,
    "workbench.editor.enablePreview": false,
    "workbench.startupEditor": "none"
}
